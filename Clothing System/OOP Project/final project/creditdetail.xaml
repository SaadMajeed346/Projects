        <Button x:Name="button" Background="Transparent" Foreground="Bisque" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,28,0,0" FontWeight="Bold" FontSize="16" Click="button_Click"/>
        <Button x:Name="button1" Background="Transparent" Foreground="Bisque" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="393,317,0,0" FontWeight="Bold" FontSize="16" Click="button1_Click"/>


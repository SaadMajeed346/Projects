        <TextBox x:Name="textBox" Background="Transparent" Foreground="Bisque" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" Margin="159,111,0,0" FontSize="18"/>
